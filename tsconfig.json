{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "module": "ESNext",
    "esModuleInterop": true,
    "outDir": "types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build/**/*"]
}
